@model SocialNetwork.Models.Users

@{
    ViewBag.Title = "Registrate";
}

<h2>Registrate</h2>

@using (Html.BeginForm("Registrate", "Accaunt", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div>
        <label>Input your email. It will be your login: </label>
        @Html.TextBox("login", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control" })
    </div>
    <div>
        <label>Your password: </label>
        @Html.TextBox("password", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control" })
    </div>
    <div>
        <label>Surname: </label>
        @Html.TextBox("surname", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control" })
    </div>
    <div>
        <label>Name: </label>
        @Html.TextBox("name", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control" })
    </div>
    <div>
        <label>Middle name: </label>
        @Html.TextBox("middle_name", ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}


